<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent_home_bg"
    android:paddingTop="20dp"
    android:orientation="vertical" >

    <!-- 虚线圆角框 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/share_margin_left"
        android:layout_marginRight="@dimen/share_margin_right"
        android:paddingBottom="@dimen/share_margin_left"
        android:background="@drawable/rect_gray_2"
        android:gravity="center"
        android:layout_marginTop="@dimen/nav_height"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/rect_gray_1"
            android:gravity="center_vertical"
            android:textSize="19sp"
            android:padding="5dp"
            android:layout_marginTop="17dp"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:background="@drawable/rect_gray_1"
                android:padding="1dp"
                android:gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/sophie"
                android:textColor="@color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="13dp"
                android:background="@drawable/rect_gray_1"
                android:gravity="top"
                android:paddingLeft="5dp"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="36dp"
		android:layout_marginRight="36dp"
		android:layout_marginTop="36dp"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/share_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_wx_btn" />

        <ImageButton
            android:id="@+id/share_wx_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/share_margin"
            android:background="@drawable/share_friends_btn" />
 
        <ImageButton
            android:id="@+id/share_wx_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/share_margin"
            android:background="@drawable/share_weibo_btn" />

        <ImageButton
            android:id="@+id/share_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/share_margin"
            android:background="@drawable/share_message_btn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="36dp"
		android:layout_marginRight="36dp"
		android:layout_marginTop="20dp"
        android:gravity="center_horizontal" >

        <ImageButton
            android:id="@+id/share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/share_qq_btn" />

        <ImageButton
            android:id="@+id/share_qzone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/share_margin"
            android:background="@drawable/share_qzone_btn" />

        <ImageButton
            android:id="@+id/share_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/share_margin"
            android:background="@drawable/share_qrcode_btn" />

        <ImageButton
            android:id="@+id/share_momo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/share_margin"
            android:background="@drawable/share_momo_btn" />
    </LinearLayout>

    <Button 
        android:id="@+id/return_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/share_margin_left"
        android:layout_marginRight="@dimen/share_margin_right"
        android:text="@string/share_return"
        android:textSize="@dimen/return_text"
        android:textColor="@color/fine_poster_title"
        android:layout_marginTop="60dp"
        android:background="@drawable/corners_consume_pop_bg" />
     
</LinearLayout>